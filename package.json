{
  "name": "@dataforge",
  "version": "1.0.0",
  "description": "Modern TypeScript utilities and components monorepo",
  "author": "Miguel√°ngel Cabrera <mcabrera.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mcabreradev/dataforge.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "build:clean": "turbo run build:clean",
    "build:docs": "npx vitepress build docs",
    "build:docs:preview": "npx vitepress preview docs",
    "dev:docs": "npx vitepress dev docs",
    "test": "turbo run test",
    "test:ui": "vitest --ui",
    "test:coverage": "turbo run test:coverage",
    "test:run": "vitest run",
    "typecheck": "turbo run typecheck",
    "typecheck:watch": "turbo run typecheck:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "biome check .",
    "clean": "turbo run clean && rm -rf docs/.vitepress/dist",
    "size": "size-limit",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run",
    "semantic-release:beta": "semantic-release --branches beta",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "happy-dom": "^12.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "semantic-release": "^21.1.1",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome lint --write",
      "biome format --write"
    ]
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "limit": "100 KB"
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
